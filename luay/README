http://android.kivy.org/
#android

cd /home/luogni/Progetti/kivy/
source sdk.sh
cd /home/luogni/Progetti/kivy/python-for-android/dist/default
python build.py --dir /home/luogni/Progetti/lucaognibene/luay/ --name "LuAy" --package "org.lucaognibene.luay" --version 0.9 --orientation portrait --permission INTERNET --permission WRITE_EXTERNAL_STORAGE --compile-pyo debug installd

